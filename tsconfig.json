{
    "compilerOptions": {
        "outDir": "./lib/",
        "noImplicitAny": false,
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "esModuleInterop": true,
        "strict": true,
        "declaration": true,
        "types": [
            "@types/node",
        ],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
    },
    "include": [
        "src/**/*"
    ],
    "exclude": ["node_modules"]
}